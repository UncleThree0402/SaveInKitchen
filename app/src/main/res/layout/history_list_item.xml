<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:id="@+id/history_list_recycle_view_parent_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true">

                <TextView
                        android:id="@+id/history_list_recycle_view_name"
                        android:layout_alignParentTop="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Korean Apple"
                        android:fontFamily="@font/quicksand"
                        android:textSize="24sp"
                        android:textColor="@color/black"/>

                <TextView
                        android:id="@+id/history_lis_recycle_view_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand"
                        android:textSize="12sp"
                        android:text="Fresh"
                        android:layout_below="@+id/history_list_recycle_view_name"
                        android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <TextView
                    android:id="@+id/history_list_buy_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05/06/2021"
                    android:textSize="24sp"
                    android:fontFamily="@font/quicksand"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"/>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/history_list_recycle_view_child_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/history_list_recycle_view_parent_layout"
                android:padding="16dp"
        android:visibility="gone">
            <TextView
                    android:id="@+id/history_list_text_view_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:text="Quantity : 500 grams"/>
            <TextView
                    android:id="@+id/history_list_text_view_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Cost : NT$ 100"
                    android:layout_below="@+id/history_list_text_view_quantity"/>

            <TextView
                    android:id="@+id/history_list_text_view_expire_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Expire Date : 06/08/2021"
                    android:layout_below="@+id/history_list_text_view_cost"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>