<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_list_item_container">



    <TextView
            android:id="@+id/buy_list_recycle_name"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:maxWidth="200dp"
            android:layout_height="wrap_content"
            android:text="Fired Chicken Wings"
            android:fontFamily="@font/quicksand"
            android:textSize="24sp"
            android:paddingVertical="8dp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"/>


    <TextView
            android:id="@+id/buy_list_recycle_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NT$ 100"
            android:textSize="24sp"
            android:fontFamily="@font/quicksand"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"/>

    <ImageView
            android:id="@+id/buy_list_line_one"
            android:layout_below="@+id/buy_list_recycle_name"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/grey_line"/>

</RelativeLayout>