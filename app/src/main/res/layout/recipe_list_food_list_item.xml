<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/recipe_food_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true">

            <TextView
                    android:id="@+id/recipe_food_recycle_view_type"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apple"
                    android:fontFamily="@font/quicksand"
                    android:textSize="24sp"
                    android:textColor="@color/black"/>

            <TextView
                    android:id="@+id/recipe_food_recycle_view_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:textSize="12sp"
                    android:text="Fresh"
                    android:layout_below="@+id/recipe_food_recycle_view_type"
                    android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <TextView
                android:id="@+id/recipe_food_recycle_view_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Heads"
                android:textSize="24sp"
                android:fontFamily="@font/quicksand"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black"/>

    </RelativeLayout>


    <TextView
            android:id="@+id/recipe_food_recycle_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:layout_below="@+id/recipe_food_rl"
            android:text="tough outer layers removed and the rest halved and thinly sliced (about 1/2 cup)"
            android:textSize="16sp"
            android:fontFamily="@font/quicksand"
            android:textColor="@color/black"
            android:paddingHorizontal="16dp"/>


</RelativeLayout>