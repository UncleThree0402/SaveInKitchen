<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

        <TextView
                android:id="@+id/dishes_recycle_view_name"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fired Chicken Wings"
                android:maxWidth="200dp"
                android:fontFamily="@font/quicksand"
                android:textSize="24sp"
                android:textColor="@color/black"/>

        <TextView
                android:id="@+id/dishes_recycle_view_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:textSize="16sp"
                android:text="1 Serving"
                android:layout_below="@+id/dishes_recycle_view_name"/>

    </RelativeLayout>

    <TextView
            android:id="@+id/dishes_recycle_view_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NT$ 100"
            android:textSize="24sp"
            android:fontFamily="@font/quicksand"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"/>

</RelativeLayout>