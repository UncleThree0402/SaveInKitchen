<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:id="@+id/food_rl"
            android:layout_alignParentStart="true">

        <TextView
                android:id="@+id/food_page_recycle_view_name"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Korean Apple"
                android:fontFamily="@font/quicksand"
                android:textSize="24sp"
                android:textColor="@color/black"/>

        <TextView
                android:id="@+id/food_page_recycle_view_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:textSize="12sp"
                android:text="Fresh"
                android:layout_below="@+id/food_page_recycle_view_name"
                android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <TextView
            android:id="@+id/food_page_recycle_view_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Heads"
            android:textSize="24sp"
            android:fontFamily="@font/quicksand"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"/>

    <ImageView
            android:id="@+id/buy_list_line_one"
            android:layout_below="@+id/food_rl"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/grey_line"/>




</RelativeLayout>