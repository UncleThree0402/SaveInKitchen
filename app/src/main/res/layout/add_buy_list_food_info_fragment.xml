<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Food Information"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="18sp"
                android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_container">


        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_buy_list_name_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="8dp"
                android:hint="Food Name"
                app:errorEnabled="true"
                app:boxStrokeColor="@color/black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/add_stock_food_type_input"
                    android:fontFamily="@font/quicksand_medium"
                    android:inputType="text"
            />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_buy_list_status_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/add_buy_list_name_input_layout"
                android:hint="Type"
                app:errorEnabled="true"
                app:boxStrokeColor="@color/black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/add_stock_food_status_input"
                    android:inputType="none"
                    android:fontFamily="@font/quicksand_medium"
            />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
                android:id="@+id/add_buy_list_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/add_buy_list_status_input_layout"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="32dp"
                android:weightSum="100" android:baselineAligned="false">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_buy_list_quantity_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:layout_marginEnd="4dp"
                    android:hint="Quantity"
                    app:errorEnabled="true"
                    app:boxStrokeColor="@color/black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal"
                        android:id="@+id/add_buy_list_quantity_input"
                        android:fontFamily="@font/quicksand_medium"
                />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/add_buy_list_unit_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="50"
                    android:hint="Unit"
                    app:errorEnabled="true"
                    app:boxStrokeColor="@color/black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/add_buy_list_unit_input"
                        android:fontFamily="@font/quicksand_medium"
                        android:inputType="text"
                />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
                android:id="@+id/add_buy_list_confirm_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="32dp"
                android:layout_below="@id/add_buy_list_ll"
                android:text="Confirm"
                android:fontFamily="@font/quicksand"
                android:backgroundTint="@color/black"/>

    </RelativeLayout>


</RelativeLayout>